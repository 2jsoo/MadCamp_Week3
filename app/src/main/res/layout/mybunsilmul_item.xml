<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:background="@drawable/radius"
    android:id="@+id/mybunsilmul_item_click"
    android:backgroundTint="#000000"
    android:elevation="10dp"
    >

    <TextView
        android:id ="@+id/mybunsilmul_category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "카테고리 :"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:id="@+id/mybunsilmul_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "@color/white"
        app:layout_constraintLeft_toRightOf="@+id/mybunsilmul_category_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mybunsilmul_guideline"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id ="@+id/mybunsilmul_information_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "정보 :"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/mybunsilmul_guideline"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:id="@+id/mybunsilmul_infromation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "@color/white"
        app:layout_constraintLeft_toRightOf="@+id/mybunsilmul_information_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>