<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    ​
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bunsilmul_guideline"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
    ​
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/bunsilmul_guideline"
        app:layout_constraintTop_toTopOf="parent"
        android:id = "@+id/bunsilmul_photo"
        />
    ​
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "카테고리"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/bunsilmul_guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:id = "@+id/bunsilmul_text_category_guidline"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/bunsilmul_text_category_guidline"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id = "@+id/bunsilmul_text_category"
        />
    ​
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "정보"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/bunsilmul_text_category"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/bunsilmul_text_information_guidline"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@+id/bunsilmul_text_information_guidline"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/bunsilmul_text_information"
        />

    <Button
        android:id="@+id/chat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radius"
        android:text = "채팅"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/white"/>
    ​
    ​
    ​
    ​
    ​
</androidx.constraintlayout.widget.ConstraintLayout>