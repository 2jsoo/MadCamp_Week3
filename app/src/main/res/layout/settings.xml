<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="currentUser"
            type="com.google.firebase.auth.FirebaseUser" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/logged_in_view_s"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_email_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_text" />

                <TextView
                    android:id="@+id/email_text_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@{currentUser.email}"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/label_display_name_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_name" />

                <TextView
                    android:id="@+id/display_name_text_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@{currentUser.displayName}"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/label_profile_picture_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_picture" />

                <ImageView
                    android:id="@+id/profile_image_view_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_s"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:elevation="4dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageButton
                android:id="@+id/back_button_s"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/abc_vector_test"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/logout_button_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:layout_margin="12dp"
                android:padding="0dp"
                android:layout_alignParentBottom="true"
                android:elevation="0dp"/>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>